FULLPATH =	@FULLPATH@

all:
	@mkdir -p spool/data 
	@mkdir spool/pub spool/lock spool/tmp spool/qfiles	
	@cp ../emwind .
	@cp ../../conf/servers.conf .
	@cp ../../scripts/qrunner.sh .
	@chmod +x qrunner.sh
	@echo ""
	@echo "It is best to compile emwind with CFLAGS += NDAEMON"
	@echo ""
	@echo "Also, make sure to change these three lines in qrunner.sh"
	@echo "to look as follows:"
	@echo ""
	@echo "spooldir=${FULLPATH}/spool"
	@echo "out_dirname=${FULLPATH}/spool/pub"
	@echo "qrunner_lockfile=${FULLPATH}/spool/qlock"
	@echo ""
	@echo "Then execute ./runtest.sh"

clean:
	rm -r -f spool emwind qrunner.sh servers.conf
	rm -f *~ Makefile

